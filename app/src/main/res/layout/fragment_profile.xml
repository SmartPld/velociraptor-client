<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:background="@color/red"
        android:layout_height="86dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/imageView12"
            android:background="@drawable/circle"
            android:adjustViewBounds="false"
            android:tint="@color/colorPrimaryDark"
            android:src="@drawable/ic_person_black_24dp"
            android:layout_marginStart="22dp"
            android:layout_alignTop="@+id/username"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/white"
            tools:text="Guillaume"
            android:id="@+id/username"
            android:layout_marginStart="15dp"
            android:layout_marginTop="16dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:text="guigui@gmail.com"
            android:id="@+id/email"
            android:layout_below="@+id/username"
            android:layout_alignStart="@+id/username" />


    </RelativeLayout>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardUseCompatPadding="true"
        android:focusable="true"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:id="@+id/card"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        ></android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardUseCompatPadding="true"
        android:focusable="true"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:id="@+id/card_stats"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        >
        <RelativeLayout
            android:padding="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:id="@+id/frameLayout2"
                android:layout_marginStart="32dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginTop="-10dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:text="points"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:id="@+id/textView5"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_below="@+id/points"
                    android:layout_alignStart="@+id/points" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    tools:text="255"
                    android:textColor="@color/red"
                    android:id="@+id/points"
                    android:layout_gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView13"
                    android:layout_above="@+id/points"
                    android:src="@drawable/ic_attach_money_24dp"
                    android:layout_alignEnd="@+id/points"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/relativeLayout"
                android:layout_alignTop="@+id/frameLayout2"
                android:layout_centerHorizontal="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:text="km"
                    android:layout_marginTop="-10dp"
                    android:textStyle="bold"
                    android:id="@+id/textView4"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_below="@+id/textView6"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:text="255"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="@color/red"
                    android:id="@+id/textView6"
                    android:layout_gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView14"
                    android:layout_above="@+id/textView6"
                    android:src="@drawable/ic_settings_ethernet_black_24dp"
                    android:layout_alignEnd="@+id/textView6"
                    android:layout_alignStart="@+id/textView6" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/relativeLayout2"
                android:layout_alignTop="@+id/relativeLayout"
                android:layout_alignParentEnd="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:text="m d+"
                    android:layout_marginTop="-10dp"
                    android:textStyle="bold"
                    android:id="@+id/textView7"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_below="@+id/textView9"
                    android:layout_alignEnd="@+id/textView9" />

                <TextView
                    android:text="255"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="@color/red"
                    android:id="@+id/textView9"
                    android:layout_gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView15"
                    android:layout_above="@+id/textView9"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_terrain_black_24dp" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>